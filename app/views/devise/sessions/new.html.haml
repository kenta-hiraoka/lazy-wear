= render "users/header"
.devise-default
  .uli-container
    .uli-container__box
      .uli-container__box__title
        Login
      .uli-container__box__main
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .uli-field
            = f.label :email, class: "uli-field__label"
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class:"uli-field__form"
          .uli-field
            = f.label :password, class: "uli-field__label"
            %br/
            = f.password_field :password, autocomplete: "current-password", class:"uli-field__form"
          - if devise_mapping.rememberable?
            .uli-field
              = f.check_box :remember_me
              = f.label :remember_me
          .uli-submit
            = f.submit "Log in", class: "uli-submit__btn"
      = render "devise/shared/links"
= render 'users/footer'
